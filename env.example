# Environment Variables Configuration
# Copy this file to .env and customize for your needs

# ============================================================================
# Server Configuration
# ============================================================================

# Transport mode: 'stdio' or 'http'
TRANSPORT=stdio

# Port for HTTP transport (only used when TRANSPORT=http)
PORT=3001

# Host binding for HTTP transport (0.0.0.0 for all interfaces)
HOST=0.0.0.0

# ============================================================================
# Logging
# ============================================================================

# Log level: 'error', 'warn', 'info', 'debug'
LOG_LEVEL=info

# Log format: 'json' or 'text'
LOG_FORMAT=text

# ============================================================================
# Security & Authentication
# ============================================================================

# API key for authentication (optional)
API_KEY=

# Secret for JWT tokens (if using authentication)
JWT_SECRET=

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================================================
# Feature Flags
# ============================================================================

# Enable/disable tools
ENABLE_TOOLS=true

# Enable/disable resources
ENABLE_RESOURCES=true

# Enable/disable prompts
ENABLE_PROMPTS=true

# ============================================================================
# Tool Configuration
# ============================================================================

# Python executable path
PYTHON_PATH=python3

# Node.js executable path
NODE_PATH=node

# Maximum tool execution time in milliseconds
MAX_TOOL_EXECUTION_TIME=30000

# ============================================================================
# External Service Integration
# ============================================================================

# Example: Database connection string
# DATABASE_URL=postgresql://user:password@localhost:5432/mydb

# Example: Redis connection string
# REDIS_URL=redis://localhost:6379

# Example: OpenAI API key
# OPENAI_API_KEY=sk-...

# Example: Custom API endpoint
# API_BASE_URL=https://api.example.com

# Example: Custom service configuration
# SERVICE_TIMEOUT=5000

# ============================================================================
# Development
# ============================================================================

# Environment: 'development', 'production', 'test'
NODE_ENV=development

# Enable hot reload in development
HOT_RELOAD=true

# Debug mode (verbose logging)
DEBUG=false

# ============================================================================
# Your Custom Variables
# ============================================================================

# Add your own environment variables here
# CUSTOM_API_KEY=
# CUSTOM_CONFIG_VALUE=

